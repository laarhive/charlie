{
  sensors: [
    {
      id: 'presenceFront1',
      type: 'ld2410',
      role: 'presence',
      zone: 'front',
      enabled: true,
      params: { debounceOnMs: 150, debounceOffMs: 400 }
    },
    {
      id: 'presenceBack1',
      type: 'ld2410',
      role: 'presence',
      zone: 'back',
      enabled: true,
      params: { debounceOnMs: 150, debounceOffMs: 400 }
    },

    {
      id: 'vibLight1',
      type: 'sw420',
      role: 'vibration',
      enabled: true,
      level: 'light',
      params: { cooldownMs: 600 }
    },
    {
      id: 'vibHeavy1',
      type: 'sw420',
      role: 'vibration',
      enabled: true,
      level: 'heavy',
      params: { cooldownMs: 600 }
    },

    {
      id: 'button1',
      type: 'gpioButton',
      role: 'button',
      enabled: true,
      params: { cooldownMs: 250 }
    }
  ],

  core: {
    armingDelayMs: 1200,
    cooldownMs: 60000
  },

  rules: [
    {
      id: 'front_anytime',
      priority: 10,
      conditions: {
        zone: 'front',
        weekday: [1, 2, 3, 4, 5, 6, 7],
        timeRanges: [{ start: '00:00', end: '24:00' }],
      },
      actions: {
        modePromptId: 'mode.front.any',
        openerPromptId: 'opener.front.any',
      },
    },
  ],

  tasker: {
    baseUrl: "http://127.0.0.1:8787/tasker", // simulator in virt/dev
    timeoutMs: 2000,
    token: {
      header: "X-Tasker-Token",
      value: "optional-secret"
    }
  },

  promptText: {
    base: 'You are Charlie.',
    modes: {
      'mode.front.any': 'Mode: invite passersby.',
    },
    openers: {
      'opener.front.any': 'Generate one short friendly Romanian opener (max 12 words).',
    },
  },
}
